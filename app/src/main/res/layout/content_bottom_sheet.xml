<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="samples.despotoski.nikola.com.bottomsheetsample.BottomSheetActivity"
    tools:showIn="@layout/activity_bottom_sheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/as_modal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modal" />

        <Button
            android:id="@+id/peek_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/peek_me" />

        <include
            layout="@layout/layout_bottons_and_textviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>
